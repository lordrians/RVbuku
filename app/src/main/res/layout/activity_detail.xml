<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detailActivity"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivDetailPhoto"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginEnd="@dimen/padding16"
            tools:src="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvDetailNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Harry Potter"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen5">

                <TextView
                    android:id="@+id/tvDetailWaktuTerbit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="28 Ferbruary 2012"
                    android:textStyle="italic"
                    android:textColor="@color/abuabu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="/"
                    android:layout_marginStart="@dimen/dimen5"
                    android:layout_marginEnd="@dimen/dimen5"
                    android:textStyle="italic"
                    android:textColor="@color/abuabu"/>

                <TextView
                    android:id="@+id/tvDetailPublisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Inggris"
                    android:textStyle="italic"
                    android:textColor="@color/abuabu"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_black_24dp"
                    android:layout_marginEnd="@dimen/dimen5"/>

                <TextView
                    android:id="@+id/tvDetailRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen10"
                    android:text="7.8"
                    android:layout_marginEnd="@dimen/dimen5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen5">

                <TextView
                    android:id="@+id/tvDetailAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Austin Kleon"
                    android:textColor="@color/bluetext"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="(Author)"
                    android:textStyle="italic"
                    android:layout_marginStart="@dimen/dimen5"
                    android:textColor="@color/abuabu"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen5">

                <TextView
                    android:id="@+id/tvDetailGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horror and Fiction"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen5"
                    android:textSize="10sp"
                    android:text="(Genre)"
                    android:textStyle="italic"
                    android:textColor="@color/abuabu"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="Deskripsi Singkat"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDetailDesk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asfaskfasfljaksjfaskfjnk"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen10"/>

</LinearLayout>